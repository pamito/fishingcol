<%= form_for (@article) do |f| %>
		<% @article.errors.full_messages.each do |message| %>
			<div class="be-red white top-space">
				* <%= message %>
			</div>
		<% end %>
			<div class="field">
				<%= f.text_field :title, placeholder: "Titulo del post", class:"form-control" %>
			</div>

			<div class="field">
				Imagen: <%= f.file_field :cover %>
			</div>

			<div class="field">
				<%= f.text_field :link_video, placeholder: "Link de YouTube", class:"form-control" %>
			</div>

			
			<div class="field">
				<%= f.text_area :body, placeholder: "Escribe aqui el texto", class:"form-control", style:"height:250px" %>
			</div>


			<label>Categorias</label>
			<% @categories.each do |category|%>
			<div class="field">
				<%= check_box_tag "categories[]", category.id %> <%= category.name %>
			</div>
			<% end %>

			<div class="field">
				<%= f.submit "Guardar", class:"btn be-red white" %>
			</div>
	<% end %>
